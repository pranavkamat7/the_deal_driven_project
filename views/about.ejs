    }

    .team-member img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 10px;
    }

    .team-member h3 {
      margin: 10px 0 5px 0;
    }

    .team-member p {
      font-size: 14px;
      color: #555;
